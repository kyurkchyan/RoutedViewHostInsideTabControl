<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:RoutedViewHostInsideTabControl.ViewModels"
        mc:Ignorable="d" Width="800" Height="450"
        x:Class="RoutedViewHostInsideTabControl.Views.TransitioningContentControlDialog"
        Title="TransitioningContentControlDialog"
        x:DataType="viewModels:HomeViewModel"
        WindowStartupLocation="CenterOwner">
    <TabControl>
        <TabItem Header="Companies">
            <TransitioningContentControl
                x:Name="CompaniesView">
            </TransitioningContentControl>
        </TabItem>
        <TabItem Header="Employees">
            <TransitioningContentControl
                x:Name="EmployeesView">
            </TransitioningContentControl>
        </TabItem>
    </TabControl>
</Window>