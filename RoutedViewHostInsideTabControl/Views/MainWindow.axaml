<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:RoutedViewHostInsideTabControl.ViewModels"
        mc:Ignorable="d" Width="1024" Height="768"
        x:Class="RoutedViewHostInsideTabControl.Views.MainWindow"
        x:DataType="viewModels:HomeViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="RoutedViewHostInsideTabControl">

    <StackPanel
        Spacing="20"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <Button
            Click="OnNavigationHostSampleClicked"
            Content="Run Fixed RoutedViewHost Tab Sample"
            Foreground="White"
            Background="Green"
            HorizontalAlignment="Center" />
        <Button
            Click="OnRoutedViewHostSampleClicked"
            Content="Run Problematic RoutedViewHost Tab Sample"
            Foreground="White"
            Background="Red"
            HorizontalAlignment="Center" />
        <Button
            Click="OnTransitioningContentControlSampleClicked"
            Content="Run Problematic TransitioningContentControl Tab Sample"
            Foreground="White"
            Background="Red"
            HorizontalAlignment="Center" />
    </StackPanel>

</Window>